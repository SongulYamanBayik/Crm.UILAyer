@model Crm.UILAyer.Models.UserEditViewModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="container">
    <h1>Kullanıcı Düzenleme Sayfası</h1>
    <br />

    <form method="post" enctype="multipart/form-data">
        <label>Ad</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Soyad</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Resim Yolu</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Mail Adresi</label>
        <input type="text" asp-for="Email" class="form-control" />
        <br />
        <label>Telefon</label>
        <input type="text" asp-for="Phone" class="form-control" />
        <br />
        <label>Şifreniz</label>
        <input type="text" asp-for="Password" class="form-control" />
        <br />
        <label>Şifre Tekrar</label>
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
        <br />
        <input type="file" asp-for="ImageUrl" class="form-control" />
        <br />
        <button class="btn btn-primary">Güncelle</button>

        <div asp-validation-summary="ModelOnly"></div>
    </form>
</div>

